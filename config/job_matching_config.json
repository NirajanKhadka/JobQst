{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Job Matching Configuration - Weights, thresholds, and skill mappings for job-profile matching",
  "version": "1.0.0",
  "last_updated": "2025-01-13",
  
  "matching_weights": {
    "description": "Weighted scoring for different match components",
    "skill_match": 0.40,
    "experience_match": 0.25,
    "location_match": 0.20,
    "salary_match": 0.15
  },
  
  "scoring_thresholds": {
    "description": "Score thresholds for match quality classification",
    "excellent": {
      "min": 0.85,
      "label": "游릭 Excellent Match",
      "action": "Apply Now",
      "priority": 1
    },
    "good": {
      "min": 0.70,
      "label": "游릭 Good Match",
      "action": "Apply Soon",
      "priority": 2
    },
    "moderate": {
      "min": 0.55,
      "label": "游리 Moderate Match",
      "action": "Consider",
      "priority": 3
    },
    "weak": {
      "min": 0.40,
      "label": "游리 Weak Match",
      "action": "Review Carefully",
      "priority": 4
    },
    "poor": {
      "min": 0.0,
      "label": "游댮 Poor Match",
      "action": "Skip",
      "priority": 5
    }
  },
  
  "readiness_criteria": {
    "description": "Criteria for application readiness assessment",
    "apply_now": {
      "min_overall_score": 0.75,
      "min_skill_match": 0.70,
      "max_critical_missing": 1,
      "label": "游릭 Apply Now"
    },
    "consider": {
      "min_overall_score": 0.55,
      "min_skill_match": 0.50,
      "max_critical_missing": 3,
      "label": "游리 Consider"
    },
    "skip": {
      "max_overall_score": 0.54,
      "label": "游댮 Skip"
    }
  },
  
  "skill_synonyms": {
