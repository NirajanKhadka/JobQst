  "confidence_factors": {
    "description": "Factors affecting match confidence calculation",
    "required_fields": {
      "title": 0.20,
      "description": 0.30,
      "skills": 0.20,
      "location": 0.15,
      "salary": 0.15
    },
    "min_confidence_threshold": 0.50,
    "high_confidence_threshold": 0.80
  },
  
  "performance_targets": {
    "description": "Performance benchmarks for matching operations",
    "max_processing_time_ms": 50,
    "target_processing_time_ms": 20,
    "cache_ttl_seconds": 300,
    "batch_size": 100
  },
  
  "skill_categories": {
    "description": "Categorized skills for weighted matching (imported from skills_database.json)",
    "critical_skills_weight": 1.5,
    "preferred_skills_weight": 1.0,
    "nice_to_have_weight": 0.5
  }
