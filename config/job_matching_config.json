      "major_cities": ["toronto", "vancouver", "montreal", "calgary", "ottawa", "edmonton", "mississauga", "winnipeg", "quebec city", "hamilton"],
      "provinces": ["ON", "BC", "AB", "QC", "MB", "SK", "NS", "NB", "NL", "PE", "NT", "YT", "NU"],
      "score_boost": 1.0
