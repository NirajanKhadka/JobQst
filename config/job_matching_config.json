  "experience_level_patterns": {
    "description": "Regex patterns for experience level detection in job descriptions",
    "entry_level": {
      "label": "Entry Level",
      "years_range": [0, 2],
      "patterns": [
        "\\b(entry|junior|jr\\.?|graduate|intern|associate|trainee)\\b",
        "\\b(0[-\\s]?2|1[-\\s]?3)\\s*years?\\b",
        "\\bnew\\s*grad(uate)?\\b",
        "\\bno\\s*experience\\s*required\\b",
        "\\bfresh\\s*grad(uate)?\\b"
      ]
    },
    "mid_level": {
      "label": "Mid Level",
      "years_range": [2, 5],
      "patterns": [
        "\\b(mid|intermediate|experienced)\\b",
        "\\b(2[-\\s]?5|3[-\\s]?6|4[-\\s]?7)\\s*years?\\b",
        "\\b2\\+\\s*years?\\b",
        "\\b3\\+\\s*years?\\b"
      ]
    },
    "senior_level": {
      "label": "Senior Level",
      "years_range": [5, 10],
      "patterns": [
        "\\b(senior|sr\\.?|lead|principal|staff)\\b",
        "\\b(5\\+|6\\+|7\\+|8\\+)\\s*years?\\b",
        "\\b(5[-\\s]?10|6[-\\s]?12)\\s*years?\\b",
        "\\b5\\+\\s*years?\\b"
      ]
    },
    "executive_level": {
      "label": "Executive Level",
      "years_range": [10, 100],
      "patterns": [
        "\\b(director|vp|vice\\s*president|cto|chief|head\\s*of|manager)\\b",
        "\\b(10\\+|12\\+|15\\+|20\\+)\\s*years?\\b",
        "\\b10\\+\\s*years?\\b",
        "\\bexecutive\\s*level\\b"
      ]
    }
  },
  
