[flake8]
# JobQst Flake8 Configuration
max-line-length = 100
extend-ignore = E203, W503, E501
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    cache,
    profiles,
    logs,
    memory-bank,
    scripts/archive

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    */migrations/*:E501

# Complexity
max-complexity = 15
