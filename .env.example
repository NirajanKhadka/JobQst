# AutoJobAgent Environment Configuration - HYBRID DEVELOPMENT
# Copy this file to .env and customize for your environment

# ===========================================
# CORE APPLICATION SETTINGS
# ===========================================

# Application Environment
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration - DuckDB Only
DATABASE_TYPE=duckdb
DATABASE_URL=duckdb:///data/jobs_duckdb.db

# ===========================================
# AI/LLM INTEGRATIONS
# ===========================================

# Google Gemini API
GOOGLE_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# OpenAI API (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama Configuration (local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# ===========================================
# WEB SCRAPING CONFIGURATION
# ===========================================

# User Agent for scraping
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Rate limiting
SCRAPING_DELAY=2
MAX_CONCURRENT_REQUESTS=5

# Browser configuration
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000

# ===========================================
# DASHBOARD CONFIGURATION
# ===========================================

# Streamlit Dashboard
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0

# ===========================================
# EMAIL CONFIGURATION
# ===========================================

# Gmail API (for job application tracking)
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret

# ===========================================
# MONITORING & LOGGING
# ===========================================

# Performance monitoring
ENABLE_MONITORING=true
METRICS_PORT=9090

# Error tracking
SENTRY_DSN=your_sentry_dsn_here

# Health check configuration
HEALTH_CHECK_INTERVAL=300

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Session configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=3600

# CORS configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# ===========================================
# NEURAL NETWORK & TRAINING
# ===========================================

# Model storage
MODEL_CACHE_DIR=./models/cache
CHECKPOINT_DIR=./models/checkpoints

# Training configuration
BATCH_SIZE=32
LEARNING_RATE=0.001
MAX_EPOCHS=100

# Wandb (experiment tracking)
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=autojobagent

# ===========================================
# FILE STORAGE
# ===========================================

# Output directories
OUTPUT_DIR=./output
RESUME_OUTPUT_DIR=./output/resumes
COVER_LETTER_OUTPUT_DIR=./output/cover_letters

# Temporary files
TEMP_DIR=./temp
CACHE_DIR=./cache

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# ===========================================
# REDIS CONFIGURATION (Job Queue)
# ===========================================
# Redis connection string for job queue integration
REDIS_URL=redis://localhost:6379/0

# Testing
TEST_MODE=false
MOCK_EXTERNAL_APIS=false

# Development features
ENABLE_AUTO_RELOAD=true
SHOW_DEBUG_INFO=true

# Profiling
ENABLE_PROFILING=false
PROFILE_OUTPUT_DIR=./logs/profiles
